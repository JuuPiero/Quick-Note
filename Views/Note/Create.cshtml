@model Note
@{
    @* ViewData["Title"] = "Home Page"; *@
    Layout = "Dashboard/_Layout";
}

<section class="section">
    <div class="section-body">
        <div class="row">
              <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2>Create New Note</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Store" asp-controller="Note">
                            <div class="form-group">
                                <label for="note-title">Title</label>
                                <input id="note-title" type="text" asp-for="Title"  class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label for="note-content">Content</label>
                                <textarea id="note-content" asp-for="Content" class="form-control"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            
                        </form>
                    </div>
                </div>
              </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/assets/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="~/assets/bundles/summernote/summernote-bs4.js"></script>
    <script src="~/assets/bundles/codemirror/lib/codemirror.js"></script>
    <script src="~/assets/bundles/codemirror/mode/javascript/javascript.js"></script>
    <script src="~/assets/bundles/jquery-selectric/jquery.selectric.min.js"></script>
    <script src="~/assets/ckeditor/ckeditor.js"></script>
    <!-- Page Specific JS File -->
    @* <script src="~/assets/js/page/ckeditor.js"></script> *@
    <!-- Template JS File -->
    <script src="~/assets/js/scripts.js"></script>
    <script>
        CKEDITOR.replace('note-content', {
            toolbar: [
                { name: 'clipboard', items: ['Cut', 'Copy', 'Paste'] },
                { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline'] },
                { name: 'paragraph', items: ['NumberedList', 'BulletedList'] },
                { name: 'insert', items: ['Link'] },
                { name: 'styles', items: ['Format'] }
            ],
            removePlugins: 'elementspath', 
            resize_enabled: false        
        });
    </script>
}